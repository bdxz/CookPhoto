<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cookitem_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">


            <ImageView
                android:id="@+id/cook_item_photo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cook_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/cook_item_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:padding="5dp"
                        android:text="蔬菜"
                        android:textSize="15sp" />
                    <Button
                        android:alpha="0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0" />

                    <com.sackcentury.shinebuttonlib.ShineButton
                        android:id="@+id/favorite_cookitem"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="right"
                        android:src="#C7C7C7"
                        app:allow_random_color="false"
                        app:big_shine_color="#EED5D2"
                        app:btn_color="#C7C7C7"
                        app:btn_fill_color="#EED5D2"
                        app:click_animation_duration="200"
                        app:enable_flashing="false"
                        app:shine_animation_duration="1500"
                        app:shine_count="8"
                        app:shine_turn_angle="10"
                        app:siShape="@raw/star"
                        app:small_shine_color="#CC9999"
                        app:small_shine_offset_angle="20" />
            </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>